@model FashionStore.Models.ProductColor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>ProductColor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idcolor" />
            <input type="hidden" asp-for="Active" />
            <input type="hidden" asp-for="IdProduct" />
            <div class="form-group">
                <label asp-for="ColorName" class="control-label"></label>
                <input asp-for="ColorName" class="form-control" />
                <span asp-validation-for="ColorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageProductColor" class="control-label"></label>
                <input asp-for="imageProductColor" class="form-control" />
                <span asp-validation-for="ImageProductColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageColor" class="control-label"></label>
                <input asp-for="imageColor" class="form-control" />
                <span asp-validation-for="ImageColor" class="text-danger"></span>
            </div>
            <input asp-for="ImageColor" value="@Model.ImageProductColor" type="hidden" />
            <input asp-for="ImageProductColor" value="@Model.ImageColor" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
