        $(document).ready(function () {
            $.ajax({
                type: "POST",
                url: "/Home/LoadCategory/",
                dataType: "Json",
                success: function (reponse) {
                    // thêm 1 gì đó sau một element nào đó
                    var outPut = '';
                    console.log(reponse);
                    $.each(reponse, function (key, itemProductType) {
                        if (itemProductType['IdType'] !== null) {
                            outPut += '<li> <a href="/Home/ViewProductType?idType=' + itemProductType['idType'] + '">'+ itemProductType['typeName'] + '</a>';
                            if (itemProductType['category'] !== null) {
                                outPut += '<ul class="sub-menu">';
                                    $.each(itemProductType.category,function(key, itemCategory){
                                        outPut += '<li><a href="/Home/ViewCategory?idCategory=' + itemCategory.idCategory + '">' + itemCategory.categoryName + '</a></li>';
                                    });
                                outPut += '</ul>';
                            }
                            outPut += '</li>';
                        }
                    });
                    console.log(outPut);
                    $(outPut).insertAfter('.main-menu .active-menu');
                }
            });
        });
