@model IEnumerable<FashionStore.Models.Product>;
@{
    var listSize = (List<ProductSize>)ViewData["listSize"];
    var listColor = (List<ProductColor>)ViewData["listColor"];
    var listProductType = (List<ProductType>)ViewData["listLoaiSanPham"];

    var listOrderTop5 = (List<OrderDetail>)ViewBag.orderTop5;
    var listSaleTop5 = (List<SaleProductPercent>)ViewBag.saleTop5;
    var listSale = (List<SaleProductPercent>)ViewBag.productSale;
}
<style>
     #circle {
      width: 50px;
      height: 50px;
      border-radius: 25px;
      background: black;
      position:absolute;
      margin-top: auto;
      top:15px;
      right:15px;
    }

    
</style>
<!-- Slider -->
<section class="section-slide">
    <div class="wrap-slick1">
        <div class="slick1">
            <div class="item-slick1" style="background-image: url(UI/Customer/images/slide-05.jpg)">
                <div class="container h-full">
                    <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
                        <div class="layer-slick1 animated visible-false" data-appear="fadeInDown" data-delay="0">
                            <span class="ltext-101 cl2 respon2">
                                Women Collection 2018
                            </span>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
                            <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
                                NEW SEASON
                            </h2>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
                            <a href="product.html" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                Shop Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="item-slick1" style="background-image: url(UI/Customer/images/PK.jpg);">
                <div class="container h-full">
                    <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
                        <div class="layer-slick1 animated visible-false" data-appear="rollIn" data-delay="0">
                            <span class="ltext-101 cl2 respon2">
                                Men New-Season
                            </span>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="lightSpeedIn" data-delay="800">
                            <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
                                Jackets & Coats
                            </h2>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="slideInUp" data-delay="1600">
                            <a href="product.html" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                Shop Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="item-slick1" style="background-image: url(UI/Customer/images/slide-06.jpg);">
                <div class="container h-full">
                    <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
                        <div class="layer-slick1 animated visible-false" data-appear="rotateInDownLeft" data-delay="0">
                            <span class="ltext-101 cl2 respon2">
                                Men Collection 2018
                            </span>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="rotateInUpRight" data-delay="800">
                            <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
                                New arrivals
                            </h2>
                        </div>

                        <div class="layer-slick1 animated visible-false" data-appear="rotateIn" data-delay="1600">
                            <a href="product.html" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                Shop Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner -->
<div class="sec-banner bg0 p-t-80 p-b-50">
    <div class="container">
        <h5 style="text-align:center; font-size:20px;font-weight:bold;">
            <a class=" text-center " style="color: #333; background: -webkit-linear-gradient(top, #f0f0f0 60%, #6dfff4 40%); font-size: 32px ">
            Danh Mục Sản Phẩm
            </a>
        </h5>
        <div class="row mt-4">
            @if (listProductType.Count() > 0)
            {
                foreach (var itemProductType in listProductType.Where(m => m.ViewInFrontEnd == 0))
                {
                    <div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
                        <!-- Block1 -->
                        <div class="block1 wrap-pic-w">
                            <img  src="~/@itemProductType.ImageType" alt="IMG-BANNER" width="200" height="300px">

                            <a asp-controller="Home" asp-action="ViewProductType" asp-route-idType="@itemProductType.Idtype" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                                <div class="block1-txt-child1 flex-col-l">
                                    <span class="block1-name ltext-102 trans-04 p-b-8">
                                        @itemProductType.TypeName
                                    </span>
                                </div>

                                <div class="block1-txt-child2 p-b-4 trans-05">
                                    <div class="block1-link stext-101 cl0 trans-09">
                                        Shop Now
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <span>Hiện tại chưa có loại sản phẩm nào</span>
            }
        </div>
    </div>
</div>


<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-10">
            <h3 style="text-align:center; font-size:20px;font-weight:bold;">
                <a class=" text-center " style="color: #333; background: -webkit-linear-gradient(top, #f0f0f0 60%, #6dfff4 40%); font-size: 32px ">
                    Sản Phẩm Bán Chạy
                </a>
            </h3>
        </div>
        <!--list Product-->
        <div class="row isotope-grid">
            @foreach (var productItem in Model.Where(m => m.ViewInFrontEnd == 0))
            {
                foreach (var itemOrder in listOrderTop5)
                {
                    if(productItem.IdProduct == itemOrder.IdProduct)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                            <!-- Block2 -->
                            <div class="block2">
                                <div class="block2-pic hov-img0">
                                    @{
                                        var infoColorofProduct = listColor.Where(m => m.IdProduct == productItem.IdProduct && m.Active == 0).FirstOrDefault();
                                        //var imageProductActive = listSize.Where(m => m.IdcolorNavigation.IdProductNavigation.IdProduct == item.IdProduct).FirstOrDefault();

                                        var getListColorProduct = listColor.Where(m => m.IdProduct == productItem.IdProduct).ToList();

                                        var Sale = listSale.Where(m => m.IdProduct == itemOrder.IdProduct).FirstOrDefault();
                                    }
                                    @if (infoColorofProduct != null)
                                    {
                                        <img src="~/@infoColorofProduct.ImageProductColor" width="400px" height="400px" alt="IMG-PRODUCT" data-img="@productItem.IdProduct" id="productImage_@productItem.IdProduct">
                                    }
                                    else
                                    {
                                        <img src="~/Storage/NoImage.png" width="400px" height="300px" alt="IMG-PRODUCT">
                                    }

                                    <a asp-action="ProductDetail" asp-controller="Home" asp-route-idProduct="@productItem.IdProduct" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                                        Xem chi tiết
                                    </a>
                                </div>

                                <div class="block2-txt flex-w flex-t p-t-14">
                                    <!--list color-->
                                    <div style="margin:auto;" class="listColor">
                                        @foreach (var itemColor in getListColorProduct)
                                        {
                                            <input value="@itemColor.Idcolor" id="btnColor_@itemColor.Idcolor" data-idColor="@itemColor.Idcolor" width="30" data-idProduct="@itemColor.IdProduct" height="30" type="image" src="~/@itemColor.ImageColor" style="border-radius:50px;opacity: 0.5;display:inline-block;" />
                                        }
                                        @if(Sale != null){
                                            <div id="circle">
                                                 <div style="margin-top:14px;margin-left:3px;">
                                                     <span style="margin-left:auto;color:white;">-@Sale.SalePercent%</span>
                                                 </div>
                                             </div>
                                        }
                                    </div>
                                    <!--propety product-->
                                    <div class="block2-txt-child1 flex-col-l " style="text-align:center;">
                                        <a asp-action="ProductDetail" asp-controller="Home" asp-route-idProduct="@productItem.IdProduct" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                            <b>@productItem.ProductName</b>
                                        </a>
                                        @{
                                            int productPrice = Sale != null ? ( productItem.ProductPrice - (productItem.ProductPrice / Sale.SalePercent) ) : productItem.ProductPrice;
                                        }

                                        <span class="stext-105 cl3" id='productPrice'>
                                            @productPrice.ToString("N0")  <u>VNĐ</u>
                                        </span>
                                    </div>

                                    @*<div class="block2-txt-child2 flex-r p-t-3">
                                        <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                            <img class="icon-heart1 dis-block trans-04" src="~/UI/Customer/images/icons/icon-heart-01.png" alt="ICON">
                                            <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/UI/Customer/images/icons/icon-heart-02.png" alt="ICON">
                                        </a>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div


    <!-- Product -->
<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-10">
            <h3 style="text-align:center; font-size:20px;font-weight:bold;">
                <a class=" text-center " style="color: #333; background: -webkit-linear-gradient(top, #f0f0f0 60%, #6dfff4 40%); font-size: 32px ">
                    Sản Phẩm Đang Sale Khủng
                </a>
            </h3>
        </div>
        <!--list Product-->
        <div class="row isotope-grid">
            @foreach (var itemSale in listSaleTop5)
            {
                foreach (var productItem in Model.Where(m => m.ViewInFrontEnd == 0 && m.IdProduct == itemSale.IdProduct))
                {
                        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                            <!-- Block2 -->
                            <div class="block2">
                                <div class="block2-pic hov-img0">
                                    @{
                                        var infoColorofProduct = listColor.Where(m => m.IdProduct == productItem.IdProduct && m.Active == 0).FirstOrDefault();
                                        //var imageProductActive = listSize.Where(m => m.IdcolorNavigation.IdProductNavigation.IdProduct == item.IdProduct).FirstOrDefault();

                                        var getListColorProduct = listColor.Where(m => m.IdProduct == productItem.IdProduct).ToList();
                                    }
                                    @if (infoColorofProduct != null)
                                    {
                                        <img src="~/@infoColorofProduct.ImageProductColor" width="400px" height="400px" alt="IMG-PRODUCT" data-img="@productItem.IdProduct" id="productImage_@productItem.IdProduct">
                                    }
                                    else
                                    {
                                        <img src="~/Storage/NoImage.png" width="400px" height="300px" alt="IMG-PRODUCT">
                                    }

                                    <a asp-action="ProductDetail" asp-controller="Home" asp-route-idProduct="@productItem.IdProduct" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                                        Xem chi tiết
                                    </a>
                                </div>

                                <div class="block2-txt flex-w flex-t p-t-14">
                                    <!--list color-->
                                    <div style="margin:auto;" class="listColor">
                                        @foreach (var itemColor in getListColorProduct)
                                        {
                                            <input value="@itemColor.Idcolor" id="btnColor_@itemColor.Idcolor" data-idColor="@itemColor.Idcolor" width="30" data-idProduct="@itemColor.IdProduct" height="30" type="image" src="~/@itemColor.ImageColor" style="border-radius:50px;opacity: 0.5;display:inline-block;" />
                                        }
                                         <div id="circle">
                                             <div style="margin-top:14px;margin-left:3px;">
                                                 <span style="margin-left:auto;color:white;">- @itemSale.SalePercent%</span>
                                             </div>
                                         </div>
                                    </div>
                                    <!--propety product-->
                                    <div class="block2-txt-child1 flex-col-l " style="text-algin:center;">
                                        <a asp-action="ProductDetail" asp-controller="Home" asp-route-idProduct="@productItem.IdProduct" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                            <b>@productItem.ProductName</b>
                                        </a>

                                        <span class="stext-105 cl3" id='productPrice'>
                                            @{
                                                int salePrice = productItem.ProductPrice - (productItem.ProductPrice / itemSale.SalePercent);
                                            }
                                            @salePrice.ToString("N0") VNĐ
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
        </div>
    </div>

</section>

